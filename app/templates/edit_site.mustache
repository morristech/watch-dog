    <fieldset>
      {{{name_input}}}
      {{{url_input}}}
      {{{url_input}}}
      {{{text_match_input}}}
      {{{threshold_input}}}
      {{{email_input}}}
    </fieldset>

    <input type="submit" value="save" />
  </form>
</div>