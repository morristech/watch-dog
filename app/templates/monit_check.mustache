check host {{host}} with address {{host}}
    if failed url {{url}}
    and content != "{{match_text}}"
    for {{threshold}} cycles
        then exec "curl http://{{watch_dog_host}}/sites/{site_id}/"
    alert {{email}} with mail-format {
      subject: [WATCH DOG] $EVENT for {{site_name}}
      message: As of $DATE {{site_name}} is $EVENT:
               $DESCRIPTION
    }
